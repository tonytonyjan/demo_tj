<h1><%= @post.title %></h1>

<%= @post.content %><br>
by
<%= @post.user.try(:name) %>

<p>
  Tags:
  <ul>
    <% @post.tags.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>
</p>

<hr/>

<%= link_to 'new a tag', new_post_tag_path(@post) %>
<%= link_to 'edit', edit_post_path(@post) %>
<%= link_to 'delete', @post, method: :delete %>
<%= link_to 'back', posts_path %>

