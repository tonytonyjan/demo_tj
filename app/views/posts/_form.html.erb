<%= form_for @post do |f| %>
  <%= f.label :title, "標題: " %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content, "內容: " %><br>
  <%= f.text_area :content %><br>
  <%= f.label :tag_ids, "標籤: " %><br>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %><br>

  <%#= f.label :new_tag, "New Tag: " %><br>
  <%#= f.text_field :new_tag %><br>
  <%= f.submit "送出" %>
<% end %>